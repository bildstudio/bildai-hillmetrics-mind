{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Services": {
    "MindApi": "https+http://MindAPI"
  },
  "Cors": {
    "AllowedOrigins": [ "*" ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.OpenTelemetry" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      // https://github.com/serilog/serilog-sinks-console
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information", // Information inside the console to avoid log spamming
          "outputTemplate": "{Timestamp:HH:mm:ss dd-MM-yyyy} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://localhost:4317",
          "outputTemplate": "{Timestamp:HH:mm:ss dd-MM-yyyy} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "HillMetrics.Amf.Rosa.Worker"
    }
  },
  "Opentelemetry": {
    "endpoint": "http://localhost:4317/"
  }
}
