    private async Task UpdateExistingMappings()
    {
        if (uploadedFile == null || dataMappings.Count == 0) return;

        // Utiliser une transaction pour garantir l'intégrité des données
        using var transaction = await DbContext.Database.BeginTransactionAsync();
        try
        {
            // Récupérer tous les mappings existants pour ce fichier
            var existingMappingsForFile = await DbContext.FileDataMappings
                .Where(m => m.FileUploadId == uploadedFile.FileUploadId)
                .ToListAsync();

            // Regrouper les mappings par DataPointId pour détecter les doublons
            var dataPointGroups = dataMappings.GroupBy(m => m.DataPointId).ToList();

            foreach (var group in dataPointGroups)
            {
                var dataPointId = group.Key;
                var mappingsForDataPoint = group.ToList();

                // Si nous avons plusieurs mappings pour le même data point, assurons-nous qu'ils ont tous un nom d'instance
                if (mappingsForDataPoint.Count > 1)
                {
                    for (int i = 0; i < mappingsForDataPoint.Count; i++)
                    {
                        var mapping = mappingsForDataPoint[i];
                        if (string.IsNullOrWhiteSpace(mapping.InstanceName))
                        {
                            mapping.InstanceName = $"Instance {i + 1}";
                        }
                    }
                }
                
                // Traiter chaque mapping dans ce groupe
                foreach (var mapping in mappingsForDataPoint)
                {
                    // Chercher un mapping existant correspondant
                    FileDataMappingEntity? existingDataPointMapping = null;

                    // Si le mapping a déjà un ID de base de données, l'utiliser
                    if (mapping.FileDataMappingId > 0)
                    {
                        existingDataPointMapping = existingMappingsForFile
                            .FirstOrDefault(m => m.FileDataMappingId == mapping.FileDataMappingId);
                    }

                    // Sinon, chercher un mapping existant avec le même data point et le même nom d'instance
                    if (existingDataPointMapping == null)
                    {
                        existingDataPointMapping = existingMappingsForFile
                            .FirstOrDefault(m => m.FinancialDataPointId == dataPointId && 
                                                   m.InstanceName == mapping.InstanceName);
                    }

                    // Si aucun mapping correspondant n'est trouvé, en créer un nouveau
                    if (existingDataPointMapping == null)
                    {
                        existingDataPointMapping = new FileDataMappingEntity
                        {
                            FileUploadId = uploadedFile.FileUploadId,
                            FinancialDataPointId = mapping.DataPointId,
                            InstanceName = !string.IsNullOrWhiteSpace(mapping.InstanceName) ? mapping.InstanceName : null
                        };

                        DbContext.FileDataMappings.Add(existingDataPointMapping);
                        await DbContext.SaveChangesAsync();
                    }
                    else
                    {
                        // Mettre à jour le mapping existant
                        existingDataPointMapping.InstanceName = !string.IsNullOrWhiteSpace(mapping.InstanceName) ? mapping.InstanceName : null;
                        DbContext.FileDataMappings.Update(existingDataPointMapping);
                        await DbContext.SaveChangesAsync();

                        // Supprimer les anciennes valeurs d'éléments
                        var existingValues = await DbContext.FileDataElementValues
                            .Where(e => e.FileDataMappingId == existingDataPointMapping.FileDataMappingId)
                            .ToListAsync();

                        DbContext.FileDataElementValues.RemoveRange(existingValues);
                        await DbContext.SaveChangesAsync();

                        // Marquer ce mapping comme traité
                        existingMappingsForFile.Remove(existingDataPointMapping);
                    }

                    // Ajouter les nouvelles valeurs d'éléments
                    foreach (var elementEntry in mapping.ElementValues)
                    {
                        var elementId = elementEntry.Key;
                        var value = elementEntry.Value?.Trim();

                        if (string.IsNullOrWhiteSpace(value))
                            continue;

                        var dataType = mapping.ElementDataTypes[elementId];

                        var elementValue = new FileDataElementValueEntity
                        {
                            FileDataMappingId = existingDataPointMapping.FileDataMappingId,
                            FinancialDataPointElementId = elementId,
                            PropertyDataType = dataType,
                            ExtractedValue = value
                        };

                        DbContext.FileDataElementValues.Add(elementValue);
                    }

                    await DbContext.SaveChangesAsync();
                }
            }

            // Supprimer les mappings qui ne sont plus utilisés
            if (existingMappingsForFile.Any())
            {
                foreach (var mappingToDelete in existingMappingsForFile)
                {
                    // Supprimer d'abord les valeurs d'éléments associées
                    var valuesToDelete = await DbContext.FileDataElementValues
                        .Where(e => e.FileDataMappingId == mappingToDelete.FileDataMappingId)
                        .ToListAsync();

                    DbContext.FileDataElementValues.RemoveRange(valuesToDelete);
                    await DbContext.SaveChangesAsync();

                    // Puis supprimer le mapping lui-même
                    DbContext.FileDataMappings.Remove(mappingToDelete);
                }

                await DbContext.SaveChangesAsync();
            }

            // Valider la transaction
            await transaction.CommitAsync();
        }
        catch (Exception ex)
        {
            // Annuler la transaction en cas d'erreur
            await transaction.RollbackAsync();
            throw new Exception($"Erreur lors de la mise à jour des mappings: {ex.Message}", ex);
        }
    }

