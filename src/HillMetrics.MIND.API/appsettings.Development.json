{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "FinancialNormalizedDb": "Host=localhost:61870; Username=postgres; Password=}sX0.*+drq303J6af8Sg_6; Database=FinancialNormalizedDb",
    "AuditDb": "Host=localhost:61870; Username=postgres; Password=}sX0.*+drq303J6af8Sg_6; Database=AuditDb"
  },
  "RateLimiters": [],
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Udp" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      // https://github.com/serilog/serilog-sinks-console
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information", // Information inside the console to avoid log spamming
          "outputTemplate": "{Timestamp:HH:mm:ss dd-MM-yyyy} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      // https://github.com/FantasticFiasco/serilog-sinks-udp
      {
        "Name": "Udp",
        "Args": {
          "remoteAddress": "localhost",
          "remotePort": 7071,
          "family": "InterNetwork",
          "outputTemplate": "{Timestamp:HH:mm:ss dd-MM-yyyy} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "HillMetrics.MIND.API"
    }
  },
  "Keycloak": {
    "Azure": {
      "ClientId": "",
      "ClientSecret": "",
      "ProviderAlias": "azuread",
      "PostLoginRedirectUrl": "",
      "PostLogoutRedirectUrl": ""
    },
    "Endpoint": "",
    "Realm": ""
  }
